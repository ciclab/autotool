
int/*TODO*/ get_expr(char *str,int bfd_type)
{
  expr_list[offset_cnt].X_op = O_absent;
  my_getExpression(expr_list+offset_cnt,str);
  offset_reloc[offset_cnt]=bfd_type;
  if(expr_list[offset_cnt].X_op==O_constant)
  {
    return expr_list[offset_cnt].X_add_number;
  }
  else if(expr_list[offset_cnt].X_op==O_symbol)
  {
    ++offset_cnt;
  }
  else
    as_bad(_("get_expr"));
  return 0;
}



